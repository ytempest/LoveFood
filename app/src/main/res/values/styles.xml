<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- styleable -->
    <declare-styleable name="TitleView">
        <attr name="title_text" format="string" />
    </declare-styleable>


    <!-- 默认的灰色分界线 -->
    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- 默认的灰色分界线，垂直方向 -->
    <style name="gray_line_horizontal">
        <item name="android:layout_width">0.3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- 灰色分界线 -->
    <style name="gray_line_padding" parent="gray_line">
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
    </style>

    <!-- 默认的按钮 -->
    <style name="default_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_round_corner_button_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 菜谱的主料、辅料、步骤等标题样式 -->
    <style name="cookbook_title_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:visibility">invisible</item>
    </style>


</resources>
