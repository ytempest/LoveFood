<resources>

    <!-- MainActivity -->
    <!-- 底部按钮的样式 -->
    <style name="rb_button_style">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_rb_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- LoginActivity -->
    <style name="default_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/default_color_cursor</item>
    </style>

    <style name="bottom_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- RegisterActivity -->
    <style name="edit_text_padding_style" parent="default_edit_text_style">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <!-- PreviewCookbookActivity -->
    <style name="amount_view_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>


    <!-- EditCookbookActivity -->
    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">#3f3f3f</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gray_bottom_line</item>
        <item name="android:drawableRight">@drawable/right_arrow_gray</item>
        <item name="android:textColor">#6e6e6e</item>
    </style>

    <style name="round_frame_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_round_frame</item>
        <item name="android:textColor">#3f3f3f</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
