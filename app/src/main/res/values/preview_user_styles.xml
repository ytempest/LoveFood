<resources>

    <style name="preview_row_container_style">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="preview_base_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="preview_left_text_style" parent="preview_base_text_style">
        <item name="android:textColor">#555555</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="preview_right_text_style" parent="preview_base_text_style">
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>


</resources>
