<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tool:context="com.ytempest.lovefood.mvp.view.personal.PreviewUserActivity">


    <com.ytempest.framelibrary.view.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_color"
        app:left_icon="@drawable/icon_left_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />

            <View style="@style/gray_line" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="#3f3f3f"
                android:textSize="24sp"
                tool:text="卤鸡爪" />

            <com.ytempest.framelibrary.view.CircleImageView
                android:id="@+id/iv_user_head"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/tv_user_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="#3f3f3f"
                android:textSize="18sp"
                tool:text="ytempest" />

            <TextView
                android:id="@+id/tv_collection_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#3f3f3f"
                tool:text="20人收藏" />

            <com.ytempest.lovefood.widget.TitleView
                android:id="@+id/tv_title_introduce"
                style="@style/cookbook_title_view_style"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="23dp"
                app:title_text="介绍" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:maxLines="8"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                tool:text="卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚卤鸡爪又叫卤鸡脚" />

            <com.ytempest.lovefood.widget.TitleView
                android:id="@+id/tv_title_main"
                style="@style/cookbook_title_view_style"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="27dp"
                app:title_text="主料" />

            <com.ytempest.lovefood.widget.AmountView
                android:id="@+id/av_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />


            <com.ytempest.lovefood.widget.TitleView
                android:id="@+id/tv_title_acc"
                style="@style/cookbook_title_view_style"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="27dp"
                app:title_text="辅料" />

            <com.ytempest.lovefood.widget.AmountView
                android:id="@+id/av_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <com.ytempest.lovefood.widget.TitleView
                android:id="@+id/tv_title_step"
                style="@style/cookbook_title_view_style"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="27dp"
                app:title_text="制作步骤" />

            <com.ytempest.lovefood.widget.ProcedureView
                android:id="@+id/procedure_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
